font_family      JetBrainsMono Nerd Font 
bold_font        auto
italic_font      auto 
bold_italic_font auto

font_size 12.0

cursor_shape beam

remember_window_size  no
initial_window_width  1500
initial_window_height 1000

enabled_layouts splits, stack, tall, fat, grid, horizontal, vertical

window_padding_width 0

hide_window_decorations yes

resize_debounce_time 0

tab_bar_edge top
tab_bar_style separator
tab_separator ""
tab_powerline_style round
tab_title_template " {index}: {title} " 

background_opacity 1.0

map shift+up move_window up
map shift+left move_window left
map shift+right move_window right
map shift+down move_window down

map ctrl+alt+h neighboring_window left
map ctrl+alt+l neighboring_window right
map ctrl+alt+k neighboring_window up
map ctrl+alt+j neighboring_window down

map ctrl+shift+j launch --location=hsplit
map ctrl+shift+k launch --location=vsplit

map ctrl+shift+l next_tab
map ctrl+shift+h prev_tab
map ctrl+shift+n new_tab

map ctrl+shift+y resize_window narrower
map ctrl+shift+o resize_window wider
map ctrl+shift+i resize_window taller
map ctrl+shift+u resize_window shorter 
map ctrl+shift+r resize_window reset

map ctrl+alt+m toggle_layout stack
map ctrl+alt+u goto_layout splits

map f11 toggle_fullscreen
